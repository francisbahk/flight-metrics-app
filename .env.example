# Environment variables for Flight App
# Copy this file to .env and fill in your actual values

# Google Gemini API Key (required for LILO and prompt parsing)
# NOTE: Use GOOGLE_API_KEY (preferred by google-genai SDK)
# GEMINI_API_KEY is supported as fallback for backward compatibility
GOOGLE_API_KEY=your_api_key_here
# GEMINI_API_KEY=your_api_key_here  # Optional fallback

# Flight Search API Provider (optional, defaults to 'amadeus')
# Options: 'amadeus' or 'serpapi'
FLIGHT_API_PROVIDER=amadeus

# Amadeus API credentials (required for default flight search)
AMADEUS_API_KEY=your_amadeus_api_key
AMADEUS_API_SECRET=your_amadeus_api_secret

# SerpAPI Key (optional alternative flight search provider)
SERPAPI_API_KEY=your_serpapi_key_here

# Database configuration
DB_HOST=your_database_host
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=your_database_name
